html.dtinth
.dtinth body
  background #353433

.dtinth body
  font-family Arimo, Helvetica, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif

.dtinth .navbar
.dtinth .navbar .links
  background-color #090807

.dtinth .search-box input
.dtinth .search-box .suggestions
  background #090807

.dtinth .search-box .suggestion.focused
  background #454443

.dtinth .theme-default-content:not(.custom)
  font-size 1.125rem

.dtinth blockquote
  border-left-color #8b8685
  color #e9e8e7

.dtinth a
  color #ffb

.dtinth .theme-default-content > p:first-child
  font-size 1.25em

.dtinth h2
  color #D7FC70
  text-shadow 2px 2px RGBA(215,252,112,0.15);

.dtinth h3
  color #FEBFEA
  text-shadow 2px 2px RGBA(0,0,0,0.25)

.dtinth .sidebar
  background #252423
  border-right-color #454443

.dtinth :not(pre) > code
  border 1px solid #555453
  background #252423
  border-radius 2px
  border-bottom-width 2px
  box-shadow 0 1px 0 #252423
  color #e9d7c5

.名
  color #bef

.dtinth details
  background: #252423
  padding 1rem
  margin 1em 0
  & > summary
    color #d7fc70
    margin -1rem
    padding 1rem

@import './Arimo-SiteTitle.styl'